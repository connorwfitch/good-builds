extends layout

include utils.pug

block content
  img(src=build.imageLink, alt=`Image of ${build.name}`).detail-image
  form(class='form', action=`/builds/${build.id}/delete`, method="post") 
    input(type='hidden' name='_csrf' value=csrfToken)
    div(class='form-end')
      a(href=`/users/${user.id}` class='button') Cancel
      button(type='submit' class='button warning') Delete Build